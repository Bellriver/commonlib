<resources>
    <style name="Bottom.Dialog.Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_popup_window_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_popup_window_slide_out</item>
    </style>

    <style name="Dialog_Horizontal_Divider" parent="@style/Normal_Horizontal_Divider">
        <item name="android:background">@color/dialog_divider_color</item>
    </style>

    <style name="Normal_Horizontal_Divider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_wh</item>
        <item name="android:background">@color/btn_divider_color</item>
    </style>

    <style name="Dialog_Content_Style">
        <item name="android:textSize">@dimen/dialog_content_textsize</item>
        <item name="android:textColor">@color/dialog_content_textcolor</item>
    </style>

    <style name="Dialog_SubTitle_Style">
        <item name="android:textSize">@dimen/dialog_subtitle_textsize</item>
        <item name="android:textColor">@color/dialog_content_textcolor</item>
    </style>

    <style name="TextAppearance.Material.Widget.PopupMenu.Large" parent="@android:style/TextAppearance.Material.Widget.PopupMenu.Large">
        <item name="android:textSize">@dimen/style_textappearance_material_widget_popupmenu_large</item>
        <item name="android:textColor">#505050</item>
    </style>

    <style name="Widget.Material.ListPopupWindow" parent="@android:style/Widget.Material.ListPopupWindow">
        <item name="android:dropDownHorizontalOffset">-40dip</item>
        <item name="android:dropDownVerticalOffset">10dip</item>
        <item name="android:popupElevation">2dp</item>
        <item name="android:popupBackground">@drawable/popupwindow_bg</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="Widget.Material.ListView.DropDown" parent="@android:style/Widget.Material.ListView.DropDown">
        <item name="android:listSelector">@drawable/item_selector</item>
    </style>

    <style name="Widget.CompoundButton.Switch" parent="@android:style/Widget.CompoundButton">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:showText">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textOn">on</item>
        <item name="android:textOff">off</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget" parent="@android:style/Widget.DeviceDefault"></style>

    <style name="Widget.Switch" parent="@style/Widget">
        <item name="thumb">@drawable/switch_thumb2</item>
        <item name="track">@drawable/switch_track</item>
        <item name="switchMinWidth">48dip</item>
        <item name="splitTrack">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.SwitchPreference" parent="@style/Widget">
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
    </style>

    <style name="Widget.Material.Light.ListView" parent="@android:style/Widget.Material.Light.ListView">
        <item name="android:listSelector">@drawable/item_selector</item>
    </style>

    <style name="TextAppearance.Material.Large" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/style_textappearance_material_large</item>
    </style>

    <style name="Dialog_Title_TextAppearance" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">@color/dialog_title_textcolor</item>
        <item name="android:textSize">@dimen/dialog_title_textsize</item>
    </style>
</resources>
