<?xml version="1.0" encoding="utf-8"?>
<com.common.sdk.widget.dialog.view.DialogCustomeContentContainer xmlns:android="http://schemas.android.com/apk/res/android"
                                                                 android:id="@+id/dialog_custome_content_container"
                                                                 android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:layout_weight="1"
                                                                 android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:minHeight="32dip"
            android:paddingTop="@dimen/dialog_content_paddingTB"
            android:paddingBottom="@dimen/dialog_content_paddingTB"
            android:paddingStart="@dimen/dialog_content_paddingLR"
            android:paddingEnd="@dimen/dialog_content_paddingLR">
            <ImageView android:id="@+id/dialog_left_iv"
                android:layout_width="@dimen/dialog_custome_icon_wh"
                android:layout_height="@dimen/dialog_custome_icon_wh"
                android:layout_marginEnd="@dimen/dialog_custome_icon_marginRight"
                android:layout_gravity="center_vertical"/>
            <include layout="@layout/dialog_content_textview"/>
        </LinearLayout>
    </ScrollView>
</com.common.sdk.widget.dialog.view.DialogCustomeContentContainer>