<?xml version="1.0" encoding="utf-8"?>
<com.common.sdk.widget.dialog.view.DialogCustomeSingleCheckContainer xmlns:android="http://schemas.android.com/apk/res/android"
                                                                     android:id="@+id/dialog_custome_single_check_container"
                                                                     android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:layout_weight="1"
                                                                     android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:minHeight="32dip"
            android:paddingTop="@dimen/dialog_content_paddingTB"
            android:paddingBottom="32dip"
            android:paddingStart="@dimen/dialog_content_paddingLR"
            android:paddingEnd="@dimen/dialog_content_paddingLR">
            <include layout="@layout/dialog_content_textview"/>
            <CheckBox
                android:id="@+id/dialog_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/dialog_checkbox_drawable"
                android:textSize="@dimen/dialog_content_textsize"
                android:textColor="@color/dialog_content_textcolor"/>
        </LinearLayout>
    </ScrollView>
</com.common.sdk.widget.dialog.view.DialogCustomeSingleCheckContainer>